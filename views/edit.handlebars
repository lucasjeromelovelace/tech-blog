<div class="row mt-4">
  <div class="col-md-6">
    <h3>Edit your post:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <input class="form-input" type="hidden" id="post-id" value='{{id}}' />
      </div>
      <div class="form-group">
        <label for="project-funding">Post title:</label>
        <input class="form-input" type="text" id="title" value="{{title}}" />
      </div>
      <div class="form-group">
        <label for="project-desc">Post Content:</label>
        <textarea class="form-input" id="content" name="project-desc">{{content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
      </div>
    </form>
    <button type="button" id="delete" class="btn btn-danger">Delete</button>
  </div>
  <script src="/js/edit.js"></script>