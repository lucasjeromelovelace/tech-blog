<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
   
      <a href="/edit/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>Created on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
  </div>
</div>
{{/each}}

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create Post:</h3>

    <form class="form new-project-form">
     
      <div class="form-group">
        <label for="project-funding">Post title:</label>
        <input class="form-input" type="text" id="title" />
      </div>
      <div class="form-group">
        <label for="project-desc">Post Content:</label>
        <textarea class="form-input" id="content" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
    
  </div>
  <script src="/js/newPost.js"></script>