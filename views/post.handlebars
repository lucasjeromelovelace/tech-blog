<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  
</div>
<div>
{{#if comments.length}}
  <div class="col-md-6 project-list">
    <h3>Comments:</h3>

    {{#each comments}}
    <div class="row mb-2">
      <div class="col-md-8">
        {{comment}}
      </div>
      <div class="col-md-4">
       <p>Created by {{user.name}} on {{format_date date_created}}</p>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>
<div class="col-md-6">
    <h3>Create a Comment:</h3>

    <form class="form new-project-form">
      <input type="hidden" value="{{id}}"id="postid"/>
      <div class="form-group">
        <label for="project-desc"></label>
        <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
  <script src="/js/comment.js"></script>